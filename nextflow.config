manifest {
    mainScript = 'main.nf'
}

docker {
    enabled = true
}

// default parameters
params {
  output = 'results'
  threads = "4"
  mem = "8"
  assemblies = "test_data/rna-spades.fasta"
  reads = "test_data/eco.fastq" 
  reference = ''
  annotation = ''
  help = false
}

process {
    withName:HISAT2 {
        container = 'nanozoo/hisat2:2.1.0--c6f93d9'
    }
}